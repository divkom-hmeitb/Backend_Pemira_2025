// Pemira HME ITB - Election System Database Schema
// This defines the structure for Senators and Kahim voting

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Voter {
  id                String   @id @default(uuid())
  nim               String   @unique
  name              String
  token             String   @unique
  isVoteCakahim     Boolean  @default(false)
  kahimChoice       String?
  isVoteCasenat     Boolean  @default(false)
  senatorChoice     String?
  votedDate         String?
  votedTime         String?
  cloudinaryUrl     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now()) @updatedAt
}
